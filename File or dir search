import os
print("Problem#2")
path = input("Please write a path to the folders:")
name = input("Please write the name of the folder:")
c = os.listdir(path)
for f in c:
    if name == f:
        path_file = os.path.join(path, name)
        print(name, " ", "Full path to your file ", os.path.join(path, name), "Size of your file",
              os.path.getsize(path_file), "Time of the last modification", os.path.getmtime(path_file),
              "Directory is", os.path.isdir(path_file), "File is", os.path.isfile(path_file))
